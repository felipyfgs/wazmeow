# Copy this file to .env and update the values according to your environment

# Server Configuration
SERVER_HOST=localhost
SERVER_PORT=8080
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s
SERVER_IDLE_TIMEOUT=60s

# Database Configuration
# Supported drivers: sqlite3, postgres
DB_DRIVER=sqlite3
DB_URL=./data/wazmeow.db
DB_AUTO_MIGRATE=true
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# PostgreSQL Configuration (when DB_DRIVER=postgres)
# DB_URL=postgres://username:password@localhost:5432/database?sslmode=disable
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=wazmeow
# POSTGRES_USER=wazmeow
# POSTGRES_PASSWORD=your_password
# POSTGRES_SSL_MODE=disable
# POSTGRES_TIMEZONE=UTC
# POSTGRES_SEARCH_PATH=public
# POSTGRES_APP_NAME=wazmeow

# SQLite Configuration (when DB_DRIVER=sqlite3)
# SQLITE_PATH=./data/wazmeow.db
# SQLITE_FOREIGN_KEYS=true
# SQLITE_JOURNAL_MODE=WAL
# SQLITE_SYNCHRONOUS=NORMAL
# SQLITE_CACHE_SIZE=1000
# SQLITE_TEMP_STORE=memory
# SQLITE_MMAP_SIZE=268435456

# WhatsApp Configuration
WHATSAPP_LOG_LEVEL=INFO
WHATSAPP_QR_TIMEOUT=5m
WHATSAPP_RECONNECT_DELAY=5s
WHATSAPP_MAX_RECONNECTS=3

# Logging Configuration
LOG_LEVEL=info
LOG_OUTPUT=dual                    # Options: console, file, dual
LOG_CONSOLE_FORMAT=console         # Options: console (colorido), json (estruturado)
LOG_FILE_FORMAT=json               # Options: console, json (recomendado: json para arquivo)
LOG_FILE_PATH=./logs/wazmeow.log
LOG_MAX_SIZE=100
LOG_MAX_BACKUPS=3
LOG_MAX_AGE=28

# CORS Configuration
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Accept,Authorization,Content-Type,X-CSRF-Token

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m

# Security Configuration (optional)
# JWT_SECRET=your-super-secret-jwt-key-here
# API_KEY=your-api-key-here

# Features
ENABLE_METRICS=false
ENABLE_WEBHOOKS=false

# Environment
ENVIRONMENT=development
